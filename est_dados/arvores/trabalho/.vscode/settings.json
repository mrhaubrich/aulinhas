{
    "python.linting.cwd": "${workspaceFolder}",

    "python.linting.prospectorArgs": [
        "--pylint-config-file",
        "/etc/pylintrc",
    ],
    "python.linting.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.formatting.provider": "none"
}